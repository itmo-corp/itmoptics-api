{
  "name": "itmoptics",
  "version": "1.0.0",
  "description": "itmoptics",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "compile": "ts-node build.ts && tsc",
    "dev": "nodemon server/index.ts | pino-pretty",
    "dev:debug": "nodemon --exec \"node -r ts-node/register --inspect-brk\" server/index.ts | pino-pretty",
    "lint": "eslint -c .eslintrc.js \"{server}/**/*.{js,ts,tsx}\" --quiet",
    "lint:fix": "eslint -c .eslintrc.js \"{server}/**/*.{js,ts,tsx}\" --quiet --fix",
    "typecheck": "tsc --noUnusedLocals"
  },
  "dependencies": {
    "cookie-parser": "1.4.5",
    "cors": "^2.8.5",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "morgan": "1.10.0",
    "pino": "8.11.0",
    "sequelize": "^6.25.8",
    "sqlite3": "^5.1.2"
  },
  "devDependencies": {
    "@types/express": "4.17.7",
    "@types/morgan": "1.9.3",
    "@types/pino": "6.3.11",
    "@typescript-eslint/eslint-plugin": "4.29.0",
    "@typescript-eslint/parser": "4.28.5",
    "cross-env": "7.0.3",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "husky": "6.0.0",
    "lint-staged": "11.1.1",
    "nodemon": "2.0.12",
    "pino-pretty": "5.1.2",
    "prettier": "2.3.2",
    "shelljs": "0.8.4",
    "ts-node": "9.1.1",
    "typescript": "4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn lint && yarn typecheck"
    }
  },
  "lint-staged": {
    "{{server/**/*,test/**/*}.{js,jsx,ts,tsx,json,css,scss,yml,yaml}}": [
      "prettier --write"
    ]
  }
}
